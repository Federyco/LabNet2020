@model Lab.Demo.EF.MVC.Models.CustomerView
<html>
<head>
    <link rel="stylesheet" href="~/css/estilos.css"/>

</head>
<body>

    <h1 class="title_decoration">Update Client</h1>
    <p class="info_decoration">Ingrese el <strong>ID</strong> del cliente y el <strong>nombre</strong> para actualizarlo</p>
    <!--van juntos update e insert no olvidar!-->
    @using (Html.BeginForm("Update", "Customer", FormMethod.Post))
    {

            <div class="div_estructure">
                <div class="div_label_id"><label>ID: </label>@Html.TextBoxFor(c => c.id)<br></div>
                <div class="div_label_name"><label>Contact Name: </label>@Html.TextBoxFor(c => c.contactName)<br></div>
                <div class="button_update"><input type="submit" name="Button" class="btn btn-success" value="actualizar" /></div>

            </div>
        

    }
</body>
</html>